#!/bin/bash

saida=$(echo $PATH | awk -F: '{for(i=1; i<=NF; i++) print $i}')

# Lê a saída linha por linha e armazena em um array
readarray -t linhas <<<"$saida"

# Cor amarela
amarelo='\033[1;33m'
# Cor magenta
magenta='\033[1;35m'

# Resetar cor
reset='\033[0m'

# Percorre cada linha do array
for linha in "${linhas[@]}"; do
    # Verifica se a linha começa com /home
    if [[ $linha == /home* ]]; then
        # Muda a cor para amarelo e imprime a linha
        echo -e "${amarelo}${linha}${reset}"
    else
        # Imprime a linha sem mudar a cor
        echo -e "${magenta}${linha}${reset}"
    fi
done
